{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types",
      "../@types",
      "./types"
    ],
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
